{
    "name": "Agent Service Demo",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
    "features": {
        "ghcr.io/devcontainers/features/azure-cli:1": {
            "installBicep": true,
            "version": "2.83.0"
        },
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "charliermarsh.ruff",
                "ms-azuretools.vscode-azurefunctions",
                "ms-azuretools.vscode-azureresourcegroups",
                "ms-vscode.azure-account",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "redhat.vscode-yaml",
                "ms-python.debugpy"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "[python]": {
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "explicit"
                    }
                },
                "editor.rulers": [100],
                "files.trimTrailingWhitespace": true,
                "files.insertFinalNewline": true
            }
        }
    },
    "forwardPorts": [8000, 8080],
    "postCreateCommand": "pip install --upgrade pip && pip install -e '.[dev]'",
    "postStartCommand": "az login --use-device-code || true",
    "remoteUser": "vscode",
    "containerEnv": {
        "PYTHONPATH": "${containerWorkspaceFolder}",
        "PYTHONDONTWRITEBYTECODE": "1"
    },
    "remoteEnv": {
        "AZURE_PROJECT_ENDPOINT": "${localEnv:AZURE_PROJECT_ENDPOINT}",
        "AZURE_MODEL_DEPLOYMENT": "${localEnv:AZURE_MODEL_DEPLOYMENT}"
    }
}
